rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  	match /Stores/{id} {
    	allow read: if true;
    }

    match /Breweries/{id} {
      allow read: if true;
    }

    match /Summary/{id} {
      allow read: if true;
    }

    match /Reports/{id} {
      allow read: if true;
    }

    match /Games/{id} {
      allow read: if true;
    }

    match /Games/{id}/messages/{mid} {
      allow read: if true;
    }

    match /Breweries/{id}/beers/{beerSlug} {
      allow read: if true;
    }

    match /Users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId
    }
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
